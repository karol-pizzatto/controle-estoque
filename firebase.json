{
  "functions": {
    "source": "backend"
  },
  "hosting": {
    "site": "controle-estoquevitalagua",

    
    "public": "frontend/dist",

   
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],

   
    "rewrites": [
      {
        "source": "/api/**",
        "function": "app"
      },
      
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}